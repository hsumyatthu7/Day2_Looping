package com.exercise.loop;

public class SumOfNaturalNumbers {
	
	public static int sumUsingForLoop(int n) {
		int sum = 0;
		for(int i=0;i<n ;i++) {
			sum += i;
		}
		return sum;
	}
	
	public static int sumUsingWhileLoop(int n) {
		
		int sum=0;
		int i=0;
		while(i<=n) {
			sum += i;
			i++;
		}
		return sum;
		
	}

}
