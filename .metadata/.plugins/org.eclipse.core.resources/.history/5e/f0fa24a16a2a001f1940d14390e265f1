package com.exercise.loopingShape;

public class RombusPattern {
	
	public static void main(String[] args) {
        int rows = 4;
        int spaces = 0;

        for (int i = 1; i <= rows; i++) {
            // Print spaces
            for (int j = 1; j <= spaces; j++) {
                System.out.print(" ");
            }

            // Print asterisks
            for (int j = 1; j <= 4; j++) {
                System.out.print("*");
            }

            // Move to the next line
            System.out.println();

            // Increase the number of spaces for the next row
            spaces++;
        }
    }

}
